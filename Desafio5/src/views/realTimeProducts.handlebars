<main class="main-container">

    <div>
        <h1>Product List</h1>
        <p>With HANDLEBARS AND WEBSOCKETS</p>
    </div>

    <div class="columns">

        {{!-- FORMULARIO --}}
        <section class="form-container">
            <div>
                <h4>Check Products with websockets</h4>
                <div>

                    {{!--! FORM GET --}}
                    <form class="form" id="formGet">
                        <div class="input-wrap">
                            <label for="getProductId-input">Find a Product by ID</label>
                            <p>Check Products</p>
                            <input id="getProductId-input" name="ProductId" type="text" alt="Find Product by ID">
                        </div>

                        <div class="btn-wrap">
                            <button>Check</button>
                            <strong id="msgGet"></strong>
                        </div>
                    </form>

                    {{!-- ! FORM POST --}}
                    <form class="form" id="formPost">
                        <div class="input-wrap">
                            <label for="postProduct-input">Add a Product</label>
                            <p>Add Product in format JSON.</p>

                            <textarea id="postProduct-input" name="addProductJson" type="text"
                                placeholder="Add Product in format JSON {'key':'value'}" rows="10"></textarea>
                        </div>

                        <div class="btn-wrap">
                            <button>Add</button>
                            <strong id="msgPost"></strong>
                        </div>
                    </form>



                    {{!--! FORM DELETE --}}
                    <form class="form" id="formDel">
                        <div class="input-wrap">
                            <label for="delProduct-input">Delete Product by ID</label>
                            <p>Add Product ID to Delet</p>
                            <input id="delProduct-input" name="ProductId" type="text" alt="Delet Product by ID">
                        </div>

                        <div class="btn-wrap">
                            <button>Delete</button>
                            <strong id="msgDel"></strong>
                        </div>
                    </form>



        </section>


        {{!-- PRODUCTS CARDS --}}
        <section class="cards-container" id="cards-container">

            {{#each products}}
            <div class="card" id="card">
                <div class="img-card-container">
                    <img src={{this.thumbnail}} alt={{this.title}}></p>
                </div>
                <ul>
                    <li>
                        <h2>{{this.title}}</h2>
                    </li>
                    <li>
                        <h4><b>Price: </b>${{this.price}}</h4>
                    </li>
                    <li><b>Description:</b> {{this.description}}</li>
                    <li><b>Code:</b> {{this.code}}</li>
                    <li><b>Status:</b> {{this.status}}</li>
                    <li><b>Stock:</b> {{this.stock}}</li>
                    <li><b>Category:</b> {{this.category}}</li>
                    <li><b>ID:</b> {{this.id}}</li>
                </ul>
            </div>
            {{/each}}
        </section>

    </div>

</main>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtimeproducts.js"></script>